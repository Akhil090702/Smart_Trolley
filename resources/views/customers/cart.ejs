<script>

    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }

    var Price_Add = document.getElementById('Amount_Add');
    var cart_amt = document.getElementById('cart_amt');
    const decreaseNumber = (incdec, price) => {
        var itemVal = document.getElementById(incdec);
        var itemPrice = document.getElementById(price);
        // console.log(itemVal.value);
        if (itemVal.value <= 0) {
            itemVal.style.backgroundColor = 'red';
            itemVal.style.color = 'white';
            alert('Min Value Obtained');
            itemVal.value = 0;
        }
        else {
            itemVal.style.backgroundColor = 'white';
            itemVal.style.color = 'blue';
            itemVal.value = parseInt(itemVal.value) - 1;
            itemPrice.innerHTML = parseInt(itemPrice.innerHTML) - 20;
            Price_Add.innerHTML = parseInt(Price_Add.innerHTML) - 20;
            cart_amt.innerHTML = parseInt(cart_amt.innerHTML) - 20;
        }
    }

    const IncreaseNumber = (incdec, price) => {
        var itemVal = document.getElementById(incdec);
        var itemPrice = document.getElementById(price);
        // console.log(itemVal.value);
        if (itemVal.value >= 10) {
            itemVal.style.backgroundColor = 'red';
            itemVal.style.color = 'white';
            alert('Max Value Obtained');
            itemVal.value = 10;
        }

        else {
            itemVal.style.backgroundColor = 'white';
            itemVal.style.color = 'blue';
            itemVal.value = parseInt(itemVal.value) + 1;
            // console.log(itemPrice.innerHTML);
            itemPrice.innerHTML = parseInt(itemPrice.innerHTML) + 20;
            Price_Add.innerHTML = parseInt(Price_Add.innerHTML) + 20;
            cart_amt.innerHTML = parseInt(cart_amt.innerHTML) + 20;

        }
    }

</script>